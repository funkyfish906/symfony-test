{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        <h3>{{ developer.getFirstName() }} {{ developer.getLastName() }}</h3>
        <h4>{{ developer.getPosition() }}</h4>
        {% if developer.getProjects() is empty %}
            <p> no projects </p>
        {% else %}
        <ul>
            {% for project in developer.getProjects() %}
                <li>
                    {{ project.getName() }}
                    <p>{{ project.getDescription() }} </p>
                </li>
            {% endfor %}
        </ul>
        {% endif %}

    </div>

{% endblock %}
